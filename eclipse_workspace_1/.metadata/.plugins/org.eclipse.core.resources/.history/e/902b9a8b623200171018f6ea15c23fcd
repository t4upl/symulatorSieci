        Boolean body=false;
        BufferedReader br = null;

        
        try {
 			br = new BufferedReader(new FileReader(pathToData));
 	        while ((line = br.readLine()) != null && !stop)
 	        {
 	        	if (body)
 	        	{	
 	        		
 	        		
 	        		
 	        	}
 	        	else
 	        	{
 		        	if (line.equals("###"))
 		        	{
 		        		body=true;
 		        	}
 	        	}
 	        }
 				
